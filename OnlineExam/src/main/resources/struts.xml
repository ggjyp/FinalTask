<?xml version="1.0" encoding="UTF-8"?>

        <!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

        <struts>

        <package name="com.jyp.onlineexam.action" extends="struts-default">
                <action name="StudentAction_login" class="com.jyp.onlineexam.action.StudentAction" method="login">
                        <result name="success">/showuser.jsp</result>
                        <result name="error">/login.jsp</result>
                </action>
                <action name="StudentAction_register" class="com.jyp.onlineexam.action.StudentAction" method="register">
                        <result name="success">/login.jsp</result>
                        <result name="error">/register.jsp</result>
                </action>

        </package>
</struts>